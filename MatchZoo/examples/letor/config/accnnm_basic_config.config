{
  "net_name": "accnnm",
  "global":{
      "model_type": "PY",
      "weights_file": "<weight_path>/accnnm_letor_ranking<model>.weights",
      "save_weights_iters": 50,
      "num_iters": 600,
      "display_interval": 10,
      "test_weights_iters": 600,
      "optimizer": "adam",
      "learning_rate": 0.1
  },
  "inputs": {
    "share": {
        "text1_corpus": "<data_path>/corpus_preprocessed.txt",
        "text2_corpus": "<data_path>/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 300,
        "embed_path": "<data_path>/glove_300_embed_norm",
        "vocab_size": 1113602,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 10,
        "text2_maxlen": -1,
        "context_len": 5,
        "context_num": -1
    },
    "train": {
        "input_type": "PairGenerator",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 10,
        "batch_size": 100,
        "relation_file": "<data_path>/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "<data_path>/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "<data_path>/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator",
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "<data_path>/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "<predict_path>/predict.test.accnnm<model>.letor.ranking.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "accnnm_merge_levels.A_CCNNM",
    "setting": {
        "context_embed": -1,
        "conv_dropout_rate": -1,
        "lstm_dropout_rate": -1,
        "pool_size": -1,
        "text1_attention": -1,
        "text2_attention": -1,
        "per_context": -1,
        "context_attention": -1,
        "merge_levels": -1
    }
  },
  "losses": [
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "precision@10", "precision@20", "ndcg@20", "ndcg@10", "map" ]
}
